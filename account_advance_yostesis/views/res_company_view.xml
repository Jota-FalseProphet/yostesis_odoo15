<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_company_form_yostesis" model="ir.ui.view">
        <field name="name">res.company.form.yostesis</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="account_advance_customer_id"
                       options="{'no_create_edit': True}"
                       class="oe_inline"
                       placeholder="438..."/>
                <field name="account_advance_supplier_id"
                       options="{'no_create_edit': True}"
                       class="oe_inline"
                       placeholder="407..."/>
            </xpath>
        </field>
    </record>
</odoo>
