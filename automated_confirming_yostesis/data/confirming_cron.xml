<odoo>
    <data noupdate="0">
        <record id="ir_actions_server_confirming_auto_conciliation"
                model="ir.actions.server">
            <field name="name">Confirming auto conciliation</field>
            <field name="model_id" search="[('model', '=', 'account.payment.order')]"/>
            <field name="state">code</field>
            <field name="code">
                env["account.payment.order"]._cron_confirming_auto_conciliation()
            </field>
        </record>

        <record id="ir_cron_confirming_auto_conciliation" model="ir.cron">
            <field name="name">Confirming auto conciliation</field>
            <field name="ir_actions_server_id"
                   ref="ir_actions_server_confirming_auto_conciliation"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="nextcall">2025-11-19 01:00:00</field>
        </record>
    </data>
</odoo>
