<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="0">

    <template id="pmx_report_invoice_replace_downpayment_label_v4"
              name="Invoice: DP label in description cell (v4)"
              inherit_id="account.report_invoice_document"
              priority="1200">

      <xpath expr="//table[@name='invoice_line_table']//td[@name='account_invoice_line_name']"
             position="replace">
        <td name="account_invoice_line_name">
          <t t-set="dp_label" t-value="o._pmx_downpayment_label_for_line(line)"/>
          <t t-if="dp_label">
            <t t-esc="dp_label"/>
          </t>
          <t t-else="">
            <span t-field="line.name" t-options="{'widget': 'text'}"/>
          </t>
        </td>
      </xpath>

    </template>

  </data>
</odoo>
