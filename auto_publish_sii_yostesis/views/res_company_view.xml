<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_company_form_add_sii_auto_upload" model="ir.ui.view">
        <field name="name">res.company.form.sii.auto.upload</field>
        <field name="model">res.company</field>

        <field name="inherit_id" ref="l10n_es_aeat_sii_oca.view_company_sii_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='sii_test']" position="before">
                <field name="sii_auto_upload"
                       widget="boolean_toggle"
                       class="oe_inline"
                       string="Enviar SII automÃ¡ticamente"/>
            </xpath>
        </field>
    </record>

    <record id="view_company_sii_start_form_auto_upload" model="ir.ui.view">
        <field name="name">res.company.sii.start.form.auto.upload</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="l10n_es_aeat_sii_oca.view_company_sii_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sii_method']" position="before">
                <field name="sii_auto_upload"
                       widget="boolean_toggle"
                       class="oe_inline"/>
            </xpath>
        </field>
    </record>
</odoo>
