<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="invoice_sii_form_test" model="ir.ui.view">
        <field name="name">account.invoice.sii.form.test</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="l10n_es_aeat_sii_oca.invoice_sii_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='send_sii']" position="replace">
                <button
                    type="object"
                    string="Send to SII"
                    name="send_sii"
                    groups="l10n_es_aeat.group_account_aeat"
                    attrs="{'invisible': ['|','|',('sii_enabled', '=', False), ('state', 'not in', ['posted']), '&amp;', ('sii_state','in',['sent','cancelled']), ('sii_test', '=', False)]}"
                />
            </xpath>
            <xpath expr="//field[@name='sii_state']" position="after">
                <field name="sii_test"/>
            </xpath>

        </field>
    </record>
</odoo>