<odoo>
    <record id="res_config_settings_view_form_yostesis_confirming_supplier_mode"
            model="ir.ui.view">
        <field name="name">res.config.settings.view.form.yostesis.confirming.supplier.mode</field>
        <field name="model">res.config.settings</field>

        <field name="inherit_id"
               ref="automated_confirming_yostesis.res_config_settings_view_form_yostesis_confirming"/>

        <field name="arch" type="xml">
            <xpath expr="//field[@name='confirming_payment_mode_id']" position="after">
                <label for="confirming_supplier_payment_mode_id"/>
                <div class="text-muted mb8">
                    Modo de pago que se utilizará para las órdenes de pago a proveedores con Confirming.
                </div>
                <div class="mt8">
                    <field name="confirming_supplier_payment_mode_id" class="w-100"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
